<!DOCTYPE html>
<html>
<head>
  <title>Freechat</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  

</head>
<body>
<!-- Navbar -->
<ul class="ulnavbar">
  <li class="linavbarleft"><div id="logo"><%=link_to image_tag( 'applogo.jpg', :size => "54x42"), root_path%></div></li>
  <li class="linavbarleft"><div id="textlogo"><%=link_to "free LINE App", root_path%></div></li>
  <li id="textlogo">free line app</li>
  <!-- <li class="linavbarleft">free line app</li> -->
  <li class="linavbarright"> 
    <%if current_user %>
    <div class="floatright">
      Logged in as <%= current_user.username%>
    </div><br>
    <%= link_to "Log Out", logout_path, method: "delete" , :class => 'registed nospace'%>

    <% else %>
    <%= link_to "Sign Up", signup_path, :class => 'regis'  %>
    <%= link_to "Log In", login_path, :class => 'regis' %>
    <% end %>
  </li>
</ul>
<div id="bluebar"></div>
<!-- Navbar -->





  <%= yield %>

</body>
</html>

